{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "plugins": ["jest"],
      "env": {
        "jest/globals": true
      }
    }
  ]
}
