{
  "name": "stylelint-config-neat",
  "version": "2.1.0",
  "description": "A neat shareable config for stylelint",
  "main": "index.js",
  "files": [
    "index.js",
    "properties-order.js"
  ],
  "scripts": {
    "lint:formatting": "prettier --check .",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:md": "remark --quiet --frail --ignore-path .gitignore .",
    "lint": "npm-run-all --parallel lint:*",
    "semantic-release": "semantic-release",
    "test": "jest",
    "prepare": "husky install"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-prettier"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/charlestati/stylelint-config-neat.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Charles TatibouÃ«t",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/charlestati/stylelint-config-neat/issues"
  },
  "homepage": "https://github.com/charlestati/stylelint-config-neat#readme",
  "dependencies": {
    "prettier": "2.5.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended": "6.0.0",
    "stylelint-config-recommended-scss": "5.0.2",
    "stylelint-no-unsupported-browser-features": "5.0.2",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "eslint": "8.6.0",
    "eslint-config-stylelint": "15.0.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "npm-run-all": "4.1.5",
    "remark-cli": "10.0.1",
    "remark-preset-lint-recommended": "6.1.2",
    "remark-preset-prettier": "1.0.0",
    "semantic-release": "18.0.1",
    "stylelint": "14.2.0"
  }
}
